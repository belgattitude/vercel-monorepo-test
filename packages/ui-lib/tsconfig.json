{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "jsx": "react-jsx",
    "noEmit": false,
    "composite": false,
    "incremental": true,
    "paths": {
      "@your-org/core-lib/*": ["../../core-lib/src/*"],
      "@your-org/core-lib": ["../../core-lib/src/index"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts", "**/*.tsx"]
}
